'use strict';
const views = require('co-views');
const parse = require('co-body');

const render = views(__dirname + '/../views', {
	map: { html: 'swig' }
});

const co = require('co'),
			wrapper = require('co-mysql'),
			mysql = require('mysql');

const options = {
	host			: 'localhost',
	user			: 'testuser',
	password	: '',
	database	: 'test'
};

const pool = wrapper(mysql.createPool(options));

co(function *() {
	let rows = yield pool.query('select * from users');
	console.log(rows);
	pool.end();
})();

